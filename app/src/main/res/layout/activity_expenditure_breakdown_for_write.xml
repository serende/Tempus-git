<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addSchedule.expenditureBreakdownActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layoutborder">

        <TextView
            android:id="@+id/dayView"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:text="날짜"
            android:layout_marginLeft="20dp"
            android:gravity="center" />

        <Button
            android:id="@+id/changeDisplay"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:text="자유 형식"
            android:layout_marginLeft="50dp"
            android:gravity="center" />

        <Button
            android:id="@+id/finButton"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:text="완료"
            android:background="#00ff0000"
            android:textColor="#ff50bcdf"
            android:layout_marginLeft="68dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutborder4"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="2dp">

        <TableRow
            android:background="@drawable/layoutborder4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="제품명"
                android:layout_marginLeft="15dp"
                />

            <EditText
                android:id="@+id/productNameEdit"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"
                />
        </TableRow>

        <TableRow
            android:background="@drawable/layoutborder4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="가격"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/priceEdit"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"
                />
        </TableRow>

        <TableRow
            android:background="@drawable/layoutborder4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="구매 일자"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/purchaseDateEdit"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"
                />
        </TableRow>

        <TableRow
            android:background="@drawable/layoutborder4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="태그"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/tagEdit"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"
                />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutborder4"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="13dp">

        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="메모"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/layoutborder4">
            <EditText
                android:id="@+id/memoEdit"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:background="@drawable/layoutborder4"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>