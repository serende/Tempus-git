<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:orientation="vertical"
    tools:context="com.applandeo.Tempus.MainActivity">

    <Button
        android:id="@+id/openCalendarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Standard calendar" />

    <Button
        android:id="@+id/openCalendarWithCustomRowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="loginactivity" />

    <Button
        android:id="@+id/openOneDayPickerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BoardMainActivity" />

    <Button
        android:id="@+id/openOneDayPickerDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="One day picker (dialog)"
        android:visibility="gone" />

    <Button
        android:id="@+id/openManyDayPickerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="RequestActivity" />

    <Button
        android:id="@+id/openManyDaysPickerDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Many days picker (dialog)"
        android:visibility="gone" />

    <Button
        android:id="@+id/openRangePickerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Range picker"
        android:visibility="gone" />

    <Button
        android:id="@+id/openRangePickerDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Range picker (dialog)"
        android:visibility="gone" />

    <Button
        android:id="@+id/testWriteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Write" />

    <Button
        android:id="@+id/friendsListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Friends" />

</LinearLayout>
