<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tempus.ui.boards.CreateExpenditureHistoryActivityForWrite"
    android:orientation="vertical"
    android:background="#00ff0000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/layoutborder">

            <Button
                android:id="@+id/dayView"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="날짜"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="#00ff0000"
                android:textColor="#FF000000"
                />

            <Button
                android:id="@+id/changeDisplay"
                android:layout_width="111dp"
                android:layout_height="41dp"
                android:text="자유 형식"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="25dp"/>

            <ImageButton
                android:id="@+id/addPhoto"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_camera"
                android:background="#00ff0000"/>

            <Button
                android:id="@+id/finButton"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:text="완료"
                android:background="#00ff0000"
                android:textColor="#ff50bcdf"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutborder4"
            android:layout_marginTop="2dp">

            <TableRow
                android:background="@drawable/layoutborder4">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="제품명"
                    android:layout_marginLeft="15dp"
                    android:background="#00ff0000"
                    android:textColor="#FF000000"
                    />

                <EditText
                    android:id="@+id/productNameEdit"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#ff50bcdf"
                    />
            </TableRow>

            <TableRow
                android:background="@drawable/layoutborder4">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="가격"
                    android:layout_marginLeft="15dp"
                    android:background="#00ff0000"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/priceEdit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#ff50bcdf"
                    />
            </TableRow>

            <TableRow
                android:background="@drawable/layoutborder4">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="구매 일자"
                    android:layout_marginLeft="15dp"
                    android:background="#00ff0000"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/purchaseDateEdit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#ff50bcdf"
                    />
            </TableRow>

            <TableRow
                android:background="@drawable/layoutborder4">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="태그"
                    android:layout_marginLeft="15dp"
                    android:background="#00ff0000"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/tagEdit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#ff50bcdf"
                    />
            </TableRow>
        </TableLayout>

